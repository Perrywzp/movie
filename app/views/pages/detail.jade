extends ../layout

block content
   .container
      .row
         .col-md-7
            video( width="720" height="480" controls autoplay loop)
               source( src="#{movie.flash}" type="video/mp4" )
               |Your browser does not support the video tag.
         .col-md-5
            dl.dl-horizontal
               dt 电影名字
               dd= movie.title
               dt 导演
               dd= movie.doctor
               dt 国家
               dd= movie.country
               dt 语言
               dd= movie.language
               dt 上映年份
               dd= movie.year
               dt 简介
               dd= movie.summary
